# Required AWS/account config
AWS_PROFILE=default
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# Project naming
PROJECT_NAME=auditor-geo
ENVIRONMENT_NAME=staging

# Networking/security
ALLOWED_INGRESS_CIDR=0.0.0.0/0
ALB_ORIGIN_DOMAIN=
ROUTE53_HOSTED_ZONE_ID=

# Budget
MONTHLY_BUDGET_USD=100
BUDGET_ALERT_EMAIL=

# Database
DB_NAME=auditor_db
DB_USER=auditor
# Optional: if empty, deploy.ps1 generates a strong password at runtime
# and stores it only in AWS resources/Secrets Manager.
DB_PASSWORD=
DB_INSTANCE_CLASS=db.t3.micro
DB_ALLOCATED_STORAGE=20

# Redis
REDIS_NODE_TYPE=cache.t3.micro

# App behavior
DESIRED_BACKEND_COUNT=1
DESIRED_FRONTEND_COUNT=1
DESIRED_WORKER_COUNT=0

# Source and secret material
SOURCE_ENV_FILE=.env
APP_SECRET_NAME=auditor-geo/staging/app

# Optional deploy controls
IMAGE_TAG=
SKIP_BUDGET=false
SKIP_BUILD=false
ENABLE_CREDITS=false
